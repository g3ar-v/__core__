SOURCE="${BASH_SOURCE[0]}"
cd -P "$( dirname "$SOURCE" )"/.. || exit
DIR="$( pwd )"

echo -e "\\e[36mCore\\e[0m is your open source voice assistant.  Full source"
echo "can be found at: ${DIR}"
echo
echo "Core-specific commands you can use from the Linux command prompt:"
echo "  core-cli-client       Command line client, useful for debugging"
echo "  core-msm              Core Skills Manager, to manage your Skills"
echo "  core-start            Launch/restart Core services"
echo "  core-stop             Stop Core services"
echo
echo "Scripting Utilities:"
echo "  core-listen           Activate the microphone to listen for a command"
echo "  core-speak <phr>      Have Core speak a phrase to the user"
# echo "  core-say-to <utt>     Send an utterance to Core as if spoken by a user"
echo
echo "Core's Python Virtual Environment (venv) control:"
# echo "  core-pip              Install a Python package within the venv"
# echo "  core-venv-activate    Enter the venv"
# echo "  core-venv-deactivate  Exit the venv"
echo
# echo "Skill Development:"
# echo "  core-msk              Core Skills Kit, create and share Skills"
# echo "  core-skill-testrunner Run integration tests on Core Skills"
echo
echo "Other:"
echo "  core-config           Manage your local Core configuration files"
# echo "  core-mic-test         Record and playback to directly test microphone"
echo "  core-help             Display this message"
echo
